name: data_check
entry_points:
  main:
    parameters:
      reference_artifact:
        description: "Local CSV path OR W&B artifact (e.g., 'project/name:latest') for REFERENCE"
        type: string
      sample_artifact:
        description: "Local CSV path OR W&B artifact for SAMPLE"
        type: string
      ks_alpha:
        description: "Significance level for KS tests"
        type: float
      output_artifact:
        description: "HTML report filename to produce"
        type: string
    command: "python run.py --reference_artifact {reference_artifact} --sample_artifact {sample_artifact} --ks_alpha {ks_alpha} --output_artifact {output_artifact}"
